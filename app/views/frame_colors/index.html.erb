<p id="notice"><%= notice %></p>

<h1>Frame Colors</h1>

<table>
  <thead>
    <tr>
      <th>Frame width</th>
      <th>Model</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @frame_colors.each do |frame_color| %>
      <tr>
        <td><%= frame_color.frame_width_id.present? ? FrameWidth.find(frame_color.frame_width_id).name : "" %></td>
        <td><%= FrameColor.find(frame_color.model_id).name %></td>
        <td><%= frame_color.name %></td>
        <td><%= link_to 'Show', frame_color %></td>
        <td><%= link_to 'Edit', edit_frame_color_path(frame_color) %></td>
        <td><%= link_to 'Destroy', frame_color, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Frame Color', new_frame_color_path %>
